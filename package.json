{
  "name": "next-method-handler",
  "version": "1.0.1",
  "description": "A utility library for handling HTTP methods in Next.js API routes. It simplifies the process of defining route handlers for different HTTP methods (GET, POST, PUT, PATCH, DELETE, OPTIONS, HEAD) without the need for messy conditional statements",
  "source": "src/index.ts",
  "main": "lib/main.js",
  "module": "lib/module.js",
  "types": "lib/types.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "rm -rf lib && parcel build",
    "prepublishOnly": "npm test && npm run build",
    "test": "jest",
    "prepare": "husky install"
  },
  "keywords": [
    "nextjs",
    "next",
    "api",
    "handler",
    "method",
    "method"
  ],
  "author": "Bocar Wane",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bocarw121/next-method-handlers.git"
  },
  "homepage": "https://github.com/bocarw121/next-method-handlers",
  "devDependencies": {
    "@parcel/packager-ts": "^2.9.3",
    "@parcel/transformer-typescript-types": "^2.8.3",
    "@types/jest": "^29.5.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "next": "^13.5.2",
    "parcel": "^2.8.3",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4",
    "node-mocks-http": "^1.13.0"
  }
}
